  <%=image_tag(@movie.title+".jpg", size: "350x500", alt: @movie.title) %>
</div>

<div id="movie_data">
<p>
  <b>Title:</b>
  <%= @movie.title %>
</p>

<p>
  <b>Genre:</b>
  <%= @movie.genre %>
</p>

<p>
  <b>Director:</b>
  <%= @movie.director %>
</p>

<p>
  <b>Stars:</b>
  <%= @movie.stars %>
</p>

<p>
  <b>Synopsis:</b>
  <%= @movie.synopsis %>
</p>

<p>
</div>

<br>

<div id="movie_trailer">
  <b>Movie trailer:</b>
  <br>  
  <iframe width="560" height="315" src=<%= @movie.movie_trailer%> frameborder="0" allowfullscreen>
  	
  </iframe>
  
  
  </br> 
  
   <%= youtube_embed(@movie.movie_trailer) %>


</p>

</div>

